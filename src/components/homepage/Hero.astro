---
import { t } from 'i18next';
import SectionContent from '../SectionContent.astro';
---
<SectionContent className='h-[calc(100vh+68px)]'>
    <div class="flex size-full justify-center items-center text-main md:max-w-[70%] m-auto">
        <div class="flex flex-col justify-center text-center gap-y-8">
            <h1 class="font-poppins text-3xl md:text-5xl lg:text-6xl max-md:px-10 leading font-bold m-auto">{t("HERO.TITLE")}</h1>
            <p class="font-inter text-lg px-12 text-center">{t("HERO.DESCRIPTION")}</p>
            <div class="mt-4">
                <a href="/register">
                    <button class="bg-mega-red font-inter font-semibold text-[#f8f8f9] px-6 py-3 rounded-lg">{t("HERO.BUTTON")}</button>
                </a>
            </div>
        </div>
    </div>
</SectionContent>