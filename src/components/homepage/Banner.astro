---
import { t } from 'i18next';
import P from '../P.astro';
import SectionContent from '../SectionContent.astro';
---
<div class="w-full bg-[#d7d8d9]">
    <SectionContent className='px-6 xl:px-11 py-12 xl:py-20' >
        <div class="flex max-md:flex-col gap-x-16 gap-y-8">
            <div class="w-full">
                <h3 class='font-poppins font-semibold text-[2.3rem] md:text-[3.5rem] leading-tight text-night'>{t("BANNER.TITLE")}</h3>
            </div>
            <div class="flex flex-col gap-y-12 w-full">
                <P className="text-night text-[0.92rem] leading-relaxed">{t("BANNER.DESCRIPTION")}</P>
                <a href="/business">
                    <button class="px-[1.8rem] py-[0.3rem] font-semibold bg-mega-red font-inter rounded-lg text-main border-2 border-mega-red">{t("BANNER.BUTTON")}</button>
                </a>
            </div>
        </div>
    </SectionContent>
</div>