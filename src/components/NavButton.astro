---
interface Props { idName: string };

const { idName } = Astro.props;
---
<div class="relative h-full flex hover:border-b-4 px-2 border-red-500">
    <input id={idName} class="h-full w-full absolute top-0 left-0 chk opacity-0 z-10 navBtns" type="checkbox">
    <div class="flex items-center gap-x-2">
        <slot />
        <div>
            <i class='bx bx-chevron-down text-3xl'></i>
        </div>
    </div>
</div>

<style>
    .chk:checked ~ .flex i, .chk:not(:checked) ~ .flex i {
        transition: rotate 0.2s ease;
    }
    .chk:checked ~ .flex i{
        rotate: 180deg;
    }
    .chk:not(:checked) ~ .flex i{
        rotate: 0deg;
    }
</style>