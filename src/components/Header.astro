---
import ButtonPrimary from '../components/ButtonPrimary.astro'
import ButtonSecondary from '../components/ButtonSecondary.astro'
---
<header class="text-main border-b-[1px] border-gray-150 fixed w-full bg-night top-0">
    <nav class="max-w-[1320px] m-auto flex justify-between h-[68px] py-5 items-center px-10">
        <div class="flex items-center gap-x-16">
            <div class="size-8">
                <img class="object-cover size-full" src="https://mega.io/wp-content/themes/megapages/megalib/images/megaicon.svg" alt="mega icon">
            </div>
            <div class="flex items-center font-inter font-bold gap-x-12">
                <div class="flex items-center gap-x-2 hover:border-b-4 border-red-500">Products<i class='bx bx-chevron-down text-3xl'></i></div>
                <div class="flex items-center gap-x-2 hover:border-b-2 border-red-500">Solutions<i class='bx bx-chevron-down text-3xl'></i></div>
                <div class="hover:border-b-2 border-red-500">Business</div>
                <div class="hover:border-b-2 border-red-500">Pricing</div>
                <div class="flex items-center gap-x-2 hover:border-b-2 border-red-500">Help<i class='bx bx-chevron-down text-3xl'></i></div>
            </div>
        </div>
        <div class="flex gap-x-5 font-inter">
            <button class="flex items-center gap-x-2 font-bold text-sm"><i class='bx bx-globe text-xl' ></i>EN</button>
            <button><i class='bx bx-sun text-2xl'></i></button>
            <div class="flex gap-x-3">
                <a href="/login">
                    <ButtonSecondary>Log in</ButtonSecondary>
                </a>
                <a href="/register">
                    <ButtonPrimary>Sign up</ButtonPrimary>
                </a>
            </div>
        </div>
    </nav>
</header>